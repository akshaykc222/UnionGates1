<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginEnd="4dp">
    <TextView
        android:id="@+id/frame_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Frame Code:0001"
        android:layout_marginLeft="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:weightSum="2"
        android:background="@color/framegrey">
        <ImageView
            android:id="@+id/frame1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_weight="1"
            android:layout_marginRight="7dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="7dp" />
        <ImageView
            android:id="@+id/p3frame2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:layout_marginRight="7dp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/gwidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:text="Gate Width: 310 cm (10' app)"/>
    <TextView
        android:id="@+id/gheight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:text="Gate height: 310 cm (10' app)"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/outer_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:text="outer element: 100 x 50 mm GI tube"/>
    <TextView
        android:id="@+id/inner_element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="5dp"
        android:text="inner element: 50 x 50 mm GI tube"/>
</LinearLayout>